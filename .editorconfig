# http://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[**.js]
indent_style = space
indent_size = 2
;vim:brace_style=collapse-preserve-inline
[**.ts]
indent_style = space
indent_size = 2
;vim:brace_style=collapse-preserve-inline

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 4
